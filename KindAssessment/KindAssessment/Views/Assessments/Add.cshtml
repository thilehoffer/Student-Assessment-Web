@model AssessmentApp.WebClient.Models.AddAssessmentViewModel

@{
    ViewBag.Title = "Create Assessment";
}
<div class="container">
    @using (Html.BeginForm("Add", "Assessments", FormMethod.Post, new { role = "form" }))
    {
 
        <div class="row">
            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>
        <div class="form-group col-sm-4">
            @Html.LabelFor(m => m.StudentAssessment.StudentId)<br />
            @(Html.Kendo().ComboBoxFor(m => m.StudentAssessment.StudentId)
            .Filter("contains")
            .IgnoreCase(true)
            .Suggest(true)
            .DataTextField("Text")
            .DataValueField("Id")
            .BindTo(@Model.Students)
            .HtmlAttributes(new { style = "width:100%" })
            )
        </div>
        <div class="clearfix "></div>
        <div class="form-group col-sm-4">
            @Html.LabelFor(m => m.StudentAssessment.AssessmentTypeId)<br />
            @(Html.Kendo().ComboBoxFor(m => m.StudentAssessment.AssessmentTypeId)
            .Filter("contains")
            .IgnoreCase(true)
            .Suggest(true)
            .DataTextField("Text")
            .DataValueField("Id")
            .BindTo(@Model.AssessmentTypes)
            .HtmlAttributes(new { style = "width:100%" })
            )
        </div>
        <div class="clearfix "></div>

        <div class="form-group col-sm-4">
            <input type="submit" class="btn btn-default" value="Start Assessment" />
        </div>

    }



 

   
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

