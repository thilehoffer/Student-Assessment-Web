@model AssessmentApp.WebClient.Models.AddClassViewModel
<div class="container">


    @using (Html.BeginForm("Add", "Classes", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group col-sm-4">
            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>
        @Html.HiddenFor(m => m.TeacherClass.TeacherId)

        <div class="clearfix "></div>
        <div class="form-group col-sm-4">
            @Html.LabelFor(m => m.TeacherClass.ClassName) <br/>

            @Html.TextBoxFor(m => m.TeacherClass.ClassName, new { @class="k-textbox",  placeholder = "E.G. Morning Class", style = "width:100%" } )
        </div>
        <div class="clearfix "></div>
        <div class="form-group col-sm-4">
            <input type="submit" class="btn btn-default" value="Add Class" />
        </div>
        <div class="clearfix "></div>
        <div class="form-group col-sm-4">
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
   
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
